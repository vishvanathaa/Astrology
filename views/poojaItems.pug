                        .row.ml-1.mt-2.card.mr-0(style='max-height:780px;overflow-y:auto')
                            div.card-body.va-cart
                                h5.card-title Items in cart (#{session.cart?session.cart.totalItems : 0})
                                ul.list-group
                                    each val in cartProducts
                                        li.list-group-item.clearfix.va-cart-item.mt-1
