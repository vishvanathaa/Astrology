if messages.errors
  .alert.alert-danger.fade.show.va-mt-10
    button.close(type='button', data-dismiss='alert')
      i.far.fa-times-circle
    for error in messages.errors
      div
        i.fa.fa-cog
        span &nbsp;&nbsp;#{error.msg}
if messages.info
  .alert.alert-info.fade.show.va-mt-10
    button.close(type='button', data-dismiss='alert')
      i.far.fa-times-circle
    for info in messages.info
      div
        i.fa.fa-cog
        span &nbsp;&nbsp;#{info.msg}
if messages.success
  .alert.alert-success.fade.show.va-mt-10
    button.close(type='button', data-dismiss='alert')
      i.far.fa-times-circle
    for success in messages.success
      div
       i.fa.fa-cog
       span &nbsp;&nbsp;#{success.msg}
