extends layout
block layout-content
    .row.mt-5
        .col-md-6.mt-2.ml-1(style='font-size:18px;')
            a(href="/cartItems" type="button" class="btn btn-warning") &nbsp; 
                h7 My Cart &nbsp;
                i.fa.fa-shopping-cart(style='color:black;font-size:20px') &nbsp;
                span.badge.badge-pill.badge-success #{session.cart ? session.cart.totalItems : 0}
        .col-md-6
            .row.ml-1(style='margin-right:0px;')
                .col-md-10
                .col-md-2
    each item,k in products
        .row
            .col-md-3
                .row.ml-1.mt-2.Message
                        .col-md-12
                            .thumbnail
                                .caption
                                    .row
                                        .col-md-12.text-right.va-offerTag
                                            span GET 10% OFFER &nbsp;
                                            i.fa.fa-asterisk
                                    .row
                                        .col-md-6
                                            h4 #{item.title}
                                        .col-md-6.text-right
                                            i.badge.badge-success 4.1 
                                                i.fa.fa-star
                                    p.description !{item.description}
                                    if k == 1
                                        img.clsSign.ml-2#zodiac(src="images/whiteThread.jpg" alt="Sagattarius")
                                    else
                                        img.clsSign.ml-2#zodiac(src="images/nagchamap_4.jpg" alt="Sagattarius")
                                    div.clearfix
                                    div.price.pull-left
                                        i.fa.fa-tag(aria-hidden="true" style="font-size:20px;") &nbsp;&nbsp;&#x20B9;&nbsp;#{item.price}
                                        .row
                                            .col-md-12.text-right
                                                a(href="/add/"+item.id)
                                                    button.btn.btn-warning.pull-right.text-right(href="/add/"+item.id role="button",style="font-size:13px;")
